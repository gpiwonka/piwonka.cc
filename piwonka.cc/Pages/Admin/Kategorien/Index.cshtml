@page
@model Piwonka.CC.Pages.Admin.Kategorien.IndexModel
@{
    ViewData["Title"] = "Kategorien";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Kategorien verwalten</h1>
    <a asp-page="./Create" class="btn btn-primary">Neue Kategorie erstellen</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Beschreibung</th>
            <th>Anzahl Posts</th>
            <th>Aktionen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Kategorien)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Beschreibung</td>
                <td>@(item.Posts?.Count ?? 0)</td>
                <td>
                    <div class="btn-group">
                        <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Bearbeiten</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Löschen</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Kategorien.Any())
{
    <div class="text-center my-5">
        <p>Keine Kategorien vorhanden.</p>
    </div>
}