@page
@model Piwonka.CC.Pages.Admin.LoginModel
@{
    ViewData["Title"] = "Admin Login";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header" style="background-color: var(--papaya); color: white;">
                    <h3 class="mb-0">Admin-Login</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @Model.ErrorMessage
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Benutzername</label>
                            <input asp-for="Username" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Passwort</label>
                            <input asp-for="Password" type="password" class="form-control" required />
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn" style="background-color: var(--papaya); color: white;">
                                Anmelden
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <a asp-page="/Index" class="text-decoration-none" style="color: var(--papaya);">Zurück zur Startseite</a>
                </div>
            </div>
        </div>
    </div>
</div>