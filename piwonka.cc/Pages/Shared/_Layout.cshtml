<!DOCTYPE html>
<html lang="de" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - piwonka.cc</title>

    @if (ViewData["MetaDescription"] != null)
    {
        <meta name="description" content="@ViewData["MetaDescription"]" />
    }

    @if (ViewData["MetaKeywords"] != null)
    {
        <meta name="keywords" content="@ViewData["MetaKeywords"]" />
    }

    <meta property="og:title" content="@ViewData["Title"] - piwonka.cc" />
    @if (ViewData["MetaDescription"] != null)
    {
        <meta property="og:description" content="@ViewData["MetaDescription"]" />
    }
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Piwonka.CC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png">
    <!-- TinyMCE CDN -->
    <script src="https://cdn.tiny.cloud/1/1zkjur802vt67keg6k9wfwsj6861v424cpawdcgzoqdcqftj/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>

    <!-- Footer-spezifisches CSS -->
    <style>
        /* Flexbox Layout für sticky footer */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .main-content {
            flex: 1 0 auto;
        }

        .footer {
            flex-shrink: 0;
            margin-top: auto;
        }

        /* Entfernen der alten Footer-Styles */
        .footer {
            position: relative !important;
            bottom: auto !important;
            width: auto !important;
            white-space: normal !important;
            line-height: normal !important;
        }

        /* Blog Dropdown Styling */
        .blog-dropdown .dropdown-toggle::after {
            display: inline-block;
            margin-left: 0.255em;
            vertical-align: 0.255em;
            content: "";
            border-top: 0.3em solid;
            border-right: 0.3em solid transparent;
            border-bottom: 0;
            border-left: 0.3em solid transparent;
        }

        .blog-dropdown .dropdown-toggle {
            position: relative;
        }

        .blog-dropdown:hover .dropdown-menu {
            display: block;
        }

        .blog-dropdown .dropdown-menu {
            border: none;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border-radius: 0.375rem;
            margin-top: 0.125rem;
        }

        .blog-dropdown .dropdown-item {
            padding: 0.5rem 1rem;
            transition: all 0.2s ease;
        }

            .blog-dropdown .dropdown-item:hover {
                background-color: var(--papaya, #FF9A3C);
                color: white;
            }

        .blog-dropdown .dropdown-divider {
            margin: 0.25rem 0;
        }

        /* Responsive Dropdown */
        @@media (max-width: 991.98px) {
            .blog-dropdown .dropdown-menu

        {
            position: static !important;
            transform: none !important;
            border: none;
            box-shadow: none;
            background-color: #f8f9fa;
            margin-left: 1rem;
        }

        }

        .coffee-link {
            text-decoration: none;
            display: inline-block;
        }

        .coffee-button {
            background: linear-gradient(135deg, #6F4E37 0%, #8B4513 50%, #D2691E 100%);
            color: white;
            border-radius: 30px;
            padding: 10px 20px;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.9rem;
            font-weight: 500;
        }

            .coffee-button:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(0,0,0,0.3);
                background: linear-gradient(135deg, #8B4513 0%, #D2691E 50%, #FF8C00 100%);
            }

        .coffee-cup {
            font-size: 1.2rem;
            animation: bounce 2s infinite;
        }

        .coffee-steam {
            position: absolute;
            top: -5px;
            left: 15px;
            opacity: 0;
            transition: opacity 0.3s;
        }

        .coffee-button:hover .coffee-steam {
            opacity: 1;
        }

        .steam {
            width: 2px;
            height: 10px;
            background: rgba(255,255,255,0.6);
            border-radius: 1px;
            position: absolute;
            animation: steam-rise 1.5s infinite;
        }

        .steam1 {
            left: 0;
            animation-delay: 0s;
        }

        .steam2 {
            left: 4px;
            animation-delay: 0.5s;
        }

        .steam3 {
            left: 8px;
            animation-delay: 1s;
        }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100%

        {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-3px);
        }

        60% {
            transform: translateY(-2px);
        }

        }

        @@keyframes steam-rise {
            0%

        {
            opacity: 0;
            transform: translateY(0) scaleX(1);
        }

        50% {
            opacity: 1;
            transform: translateY(-8px) scaleX(1.2);
        }

        100% {
            opacity: 0;
            transform: translateY(-15px) scaleX(0.8);
        }

        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold d-flex align-items-center" asp-area="" asp-page="/Index">
                    <img src="/images/logo.png" alt="Piwonka Logo" class="navbar-logo me-2">
                  @*   <span class="navbar-text">piwonka.cc</span> *@
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <!-- Hauptmenü -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                                Home
                            </a>
                        </li>

                        <!-- Blog mit Kategorien-Dropdown -->
                        <li class="nav-item dropdown blog-dropdown">
                            <a class="nav-link dropdown-toggle text-dark"
                               href="#"
                               id="blogDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false"
                               onclick="window.location.href='/Blog/Index'">
                                Blog
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="blogDropdown">
                                <li>
                                    <a class="dropdown-item" asp-page="/Blog/Index">
                                        <i class="fas fa-list me-2"></i>Alle Beiträge
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                @await Component.InvokeAsync("BlogCategoriesMenu")
                            </ul>
                        </li>

                        <!-- Hierarchisches Menü -->
                        @await Component.InvokeAsync("MainMenu")

                    </ul>

                    <!-- Rechte Seite: Suche, Sprache, Admin -->
                    <div class="d-flex align-items-center">
                        <!-- Suchbox -->
                        <div class="me-3">
                            @await Component.InvokeAsync("SearchBox")
                        </div>

                        <!-- Sprachauswahl -->
                        <div class="me-3">
                            @await Component.InvokeAsync("LanguageSwitcher")
                        </div>

                        <!-- Admin-Bereich -->
                        <div class="dropdown">
                            <a class="dropdown-item" asp-page="/Admin/Index">
                                Admin
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Haupt-Content-Bereich mit flex-grow -->
    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer bleibt am Ende -->
    <footer class="border-top footer text-muted py-3 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <p class="small mb-0">
                        &copy; @DateTime.Now.Year - piwonka.cc - Baustelle seit 2000
                        <a asp-area="" asp-page="/Privacy" class="text-decoration-none">Privacy</a>
                        <a asp-area="" asp-page="/Datenschutz" class="text-decoration-none">Datenschutz</a>
                    </p>
                </div>
                <div class="col-md-4 text-end">
                    <p class="small mb-0">
                        made with ASP.NET Core by me and Claude
                    </p>
                </div>
                <div class="col-md-4 text-center">
                    <!-- Buy Me a Coffee Button -->
                    <a href="https://paypal.me/geopiw"
                       target="_blank"
                       class="btn btn-coffee btn-sm">
                        <i class="fas fa-coffee me-1"></i>
                        Buy me a coffee
                    </a>
                </div>
            </div>
        </div>
    </footer>

    @await Component.InvokeAsync("SimpleCookieBanner")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Blog Dropdown JavaScript -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Ermöglicht, dass ein Klick auf "Blog" zur Blog-Seite führt
            const blogLink = document.querySelector('#blogDropdown');
            if (blogLink) {
                blogLink.addEventListener('click', function(e) {
                    // Auf Desktop: Bei Hover wird Dropdown gezeigt, bei Klick zur Seite
                    if (window.innerWidth >= 992) {
                        e.preventDefault();
                        window.location.href = '/Blog/Index';
                    }
                    // Auf Mobile: Normales Dropdown-Verhalten
                });
            }

            // Hover-Effekt für Desktop
            const dropdown = document.querySelector('.blog-dropdown');
            let hoverTimer;

            if (dropdown && window.innerWidth >= 992) {
                dropdown.addEventListener('mouseenter', function() {
                    clearTimeout(hoverTimer);
                    const dropdownMenu = this.querySelector('.dropdown-menu');
                    dropdownMenu.classList.add('show');
                });

                dropdown.addEventListener('mouseleave', function() {
                    const dropdownMenu = this.querySelector('.dropdown-menu');
                    hoverTimer = setTimeout(() => {
                        dropdownMenu.classList.remove('show');
                    }, 150);
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>